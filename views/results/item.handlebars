<section>

  {{#if hasError}}
    <h4>Error fetching item data! Status: {{errorStatus}}</h4>
  {{else}}
    <h2 style="text-transform: uppercase;">{{item.name}}</h2>
    
    <div>
    <a href="/api/item">Back to Items List</a>
    </div>

    <h3>Item Details</h3>
    <pre>{{json item}}</pre>
  {{/if}}

</section>